
@{
    var item = new List<SelectListItem>()
{
new SelectListItem{Text = "Add" },
new SelectListItem{Text="substract"},
new SelectListItem{Text="multiplay"},
new SelectListItem{Text="Devide"},
};
}

<div>
    <h2>MyCalculator</h2>
</div>

<div>
    <div class="row">
        @using (Html.BeginForm())
        {
            <div class="col-md-5">
                @Html.Editor("firstval", new { htmlAttributes = new { @class = "form-control", Placeholder = "Enter first value" } })
            </div>
            <div class="col-md-5">
                @Html.DropDownList("operand", item, new { @class = "form-control" })
            </div>
            <div class="col-md-5">
                @Html.Editor("secondval", new { htmlAttributes = new { @class = "form-control", Placeholder = "Enter second value" } })
            </div>
            <div class="col-md-5">
                <Button class="btn-block">submit</Button>
            </div>

        }
    </div>
    <div class="row">
        <div class="col-md-8">
            @if (ViewBag.message != null)
            {
                <p>@ViewBag.message</p>
            }
        </div>

    </div>

</div>
